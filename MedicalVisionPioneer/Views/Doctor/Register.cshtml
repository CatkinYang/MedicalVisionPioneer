
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-us">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap-clearmin.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/roboto.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/font-awesome.min.css">
    <title>Medical Vision Pioneer</title>
    <style></style>
</head>

<body class="cm-login">
    <div class="text-center" id="background" style="padding: 90px 0 30px 0; background-image:url('../../Content/assets/patientloginbackground.png'); border-bottom: 1px solid #ddd; background-size: auto; background-repeat: no-repeat;">
        <h1 style="font-size:xx-large;font-weight:bold">Medical Vision Pioneer</h1>
    </div>

    <div class="col-sm-6 col-md-4 col-lg-3" style="margin:40px auto; float:none;">
        <form method="post" id="myForm" onsubmit="return checkForm(e)" action="/Doctor/Register">
            <div class="col-xs-12">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-fw fa-user"></i></div>
                        <input type="text" name="Email" maxlength="16" id="Email" class="form-control" placeholder="docexample@xxx.com" value="@ViewBag.email">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                        <input type="password" name="password" maxlength="16" id="pwd" class="form-control" placeholder="password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                        <input type="text" name="Name" maxlength="16" id="name" class="form-control" placeholder="name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                        <input type="text" name="major" maxlength="16" id="major" class="form-control" placeholder="major">
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <button type="submit" class="btn btn-block btn-primary"> Register </button>
            </div>
            <div class="col-xs-6">
                <button type="button" class="btn btn-block btn-primary" onclick="window.history.back()"> Back </button>
            </div>
            <h1 class="col-xs-12" id="notice" style="color:red;font-size:large;text-align:center">@ViewBag.notice</h1>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>
        function checkForm(e) {
            e.preventDefault();
            var userEmail = $("#Email").val();
            var pwd = $("#pwd").val();
            var major = $('#major').val();
            var name = $('#name').val();
            if (userEmail.length < 1) {
                $("#notice").text("The doc email can not be empty!");
                return false;
            }
            if (pwd.length < 1) {
                $("#notice").text("The doc can not be empty!");
                return false;
            }
            if (major.length < 1) {
                $("#notice").text("The major can not be empty!");
                return false;
            }
            if (name.length < 1) {
                $("#notice").text("The name can not be empty!");
                return false;
            } else {
                if (confirm("Registration successful! Click OK to continue to the login page.")) {
                    // 添加注册成功的提示
                    $("#notice").text("Registration successful! Please proceed to the login page.");
                    // 跳转到登录页面
                    window.location.href = "/Doctor/Login";
                }
            }
        }
    </script>

</body>
</html>

